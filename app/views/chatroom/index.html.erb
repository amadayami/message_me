<h2 class="ui center aligned medium icon header">
  <i class="circular envelope icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <div class="ui medium feed">
          <h4 class="ui header">Chat log</h4>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path) do |f| %>
          <div class="field">
            <div class="ui fluid icon focus input">
              <%= f.text_field :body %>
              <%= f.button '<i class="black icon pencil alternate"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  

    
  </div>

  <div class="four wide column">
    <div class="ui card chatbox" style="overflow:hidden;">
      <div class="content">
        <div class="ui secondary vertical pointing menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>

</div>